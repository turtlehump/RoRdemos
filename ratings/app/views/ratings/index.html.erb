<!-- the following calls the name() function in the Professor model -->
<h1><%= @professor.name %>'s Ratings </h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Comment</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.course %></td>
        <td><%= rating.comment %></td>
        <td><%= rating.rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_professor_rating_path %> |
<%= link_to "Back to #{@professor.name}'s page", professor_path(@professor) %>
