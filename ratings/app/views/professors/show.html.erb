<p id="notice"><%= notice %></p>

<h1><%= @professor.university + ": " + @professor.name %>'s Ratings</h1>

<!-- this table use to be in app/views/ratings/index.html.erb -->
<table>
  <thead>
      <tr>
        <th>Course</th>
        <th>Comment</th>
        <th>Rating</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professor.ratings.each do |rating| %>
      <% if !rating.new_record? %>
        <tr>
          <td><%= rating.course %></td>
          <td><%= rating.comment %></td>
          <td><%= rating.rating %></td>
          <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
          <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<br>
<h3>Create New Rating</h3>
<%= render 'ratings/form' %>
